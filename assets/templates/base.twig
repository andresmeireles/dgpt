<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/output.css">
    <script src="/js/app.js"></script>
</head>
<body class="bg-slate-200">
    <div class="flex">
        <div class="w-48 bg-blue-950 text-white rounded-r min-h-screen max-h-screen p-2">
            <div>
                <div class="text-5xl font-bold mb-16">
                    DGPT
                </div>
                <div class="mb-16 flex flex-col space-y-2">
                    <span>Modelo:</span>
                    {% for model in models %}
                        <label>
                            <input checked="{{ loop.first ? 'checked' : '' }}" type="radio" name="model" value="{{ model }}">
                            {{ model }}
                        </label>
                    {% endfor %}
                </div>
                <div class="flex-col">
                    <button class="bg-blue-500 hover:bg-blue-400 rounded w-full p-3 mb-4">
                        Atualizar todos os modelos
                    </button>
                    <div class="flex flex-col space-y-2">
                        {% for a in available %}
                            {% if a in models %}
                                <span>{{a}} - OK</span>
                            {% else %}
                                <div class="flex gap-2">
                                    <span>{{a}}</span>
                                    <button onclick="add('{{a}}')" class="bg-blue-500 hover:bg-blue-400 rounded p-1 add-model">ADD</button>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="p-1 w-full min-h-screen max-h-screen flex">
            {% block body %}{% endblock %}
        </div>

        <script>
            /**
             * @param {string} model
             */
            const add = async (model) => {
                const progress = confirm('Deseja carregar o model ' + model + '?');
                if (!progress) {
                    return;
                }

                const addModelButtons = document.querySelectorAll('.add-model');
                addModelButtons.forEach(button => {
                    button.disabled = true;
                });

                const req = await fetch('/api/add', {
                    method: 'POST',
                    body: JSON.stringify({ model: model }),
                });

                if (!req.ok) {
                    addModelButtons.forEach(button => {
                        button.disabled = false;
                    })
                    alert('Error while adding model');
                }

                window.location.reload();
            }
        </script>
    </div>
</body>
</html>